class Solution:
    def maximumProfit(self, prices):
        if not prices:
            return 0
        
        min_price = float('inf')
        max_profit = 0
        
        for price in prices:
            if price < min_price:
                min_price = price  # update min (buy) price
            else:
                profit = price - min_price
                max_profit = max(max_profit, profit)
        
        return max_profit
